---
import "../styles/bubbles.css";
import "../styles/page.css";
import MarkdownRenderer from '../components/MarkdownRenderer.astro';
import Footer from '../components/Footer.astro';
import siteConfig from '../custom/site-config';
const { title, description, pubDate, content } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full" style="scroll-padding-top: 4.5rem;">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body class="min-h-screen bg-white dark:bg-gray-900 flex flex-col">
		<div class="fixed inset-0 bg-white dark:bg-gray-900 z-50 flex items-center justify-center page-loader">
			<div class="text-2xl font-bold text-gray-800 dark:text-white loader-text">Loading...</div>
		</div>
		
		<div class="fixed inset-0 z-[-1] bg-gradient-to-br from-white to-gray-200 dark:from-gray-800 dark:to-gray-900"></div>
		
		<div class="fixed inset-0 z-[-1]">
			<div class="floating-bubbles">
				<div class="bubble"></div>
				<div class="bubble"></div>
				<div class="bubble"></div>
				<div class="bubble"></div>
				<div class="bubble"></div>
			</div>
		</div>
		
		<header class="sticky top-0 z-30 backdrop-blur-sm bg-white/80 dark:bg-gray-900/80 border-b border-gray-200 dark:border-gray-700">
			<div class="max-w-3xl mx-auto px-4 py-3 flex items-center justify-between">
				<a href="/" class="text-xl font-bold text-gray-800 dark:text-white">{siteConfig.siteName}</a>
				<a href="/posts" class="text-sm font-medium text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 flex items-center">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
					</svg>
					Back to Posts
				</a>
			</div>
		</header>
		
		<main class="max-w-4xl mx-auto px-4 py-8 relative z-10 page-content flex-grow">
			<header class="mb-10 text-center">
				{pubDate && (
					<time class="inline-block px-3 py-1 text-sm font-medium text-blue-600 bg-blue-100 rounded-full dark:text-blue-300 dark:bg-blue-900/50 mb-4">
						{new Date(pubDate).toLocaleDateString('en-US', { 
							year: 'numeric', 
							month: 'long', 
							day: 'numeric' 
						})}
					</time>
				)}
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4" style="line-height: 1.3;">{title}</h1>
				{description && (
					<p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">{description}</p>
				)}
			</header>
			
			{content
				? <MarkdownRenderer content={content} maxWidth="wide" />
				: <article class="prose prose-lg dark:prose-invert max-w-none dark:text-gray-100">
					<slot />
				</article>
			}
		</main>
		
		<Footer />
		
		<script src="/src/scripts/shared-layout"></script>
	</body>
</html>